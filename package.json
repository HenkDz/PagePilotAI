{
  "name": "pagepilot-ai-extension",
  "description": "Personalize any webpage with AI-assisted automations.",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
